rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can access their own document and ANY subcollection under it
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // This is the CRITICAL part you were missing:
      // It allows access to /meals, /customFoods, and any other future data.
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
